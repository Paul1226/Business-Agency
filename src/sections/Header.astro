<style>
  @keyframes enhance-header {
    50% {
      
      color: white;
    }
    100% {
      background-color: #1c525390;
      backdrop-filter: blur(.5rem);
      border-radius:0 0 15px 15px;
      color: white;
    }
  }
  @keyframes title-header {
    50% {
      
      color: #20817f;
    }
    100% {
      color: #d3f4ef;
    }
  }
  @keyframes nav-header {
    50% {
      
      color: #20817f;
    }
    100% {
      color: #fff;
    }
  }
  .header__container {
    animation: enhance-header ease-in-out both;
    animation-timeline: scroll(root block);
    animation-range: 0 150px;
  }

  .title__header {
    animation: title-header ease-in-out both;
    animation-timeline: scroll(root block);
    animation-range: 0 100px;
  }
  .nav{
    animation: nav-header ease-in-out both;
    animation-timeline: scroll(root block);
    animation-range: 0 100px;
  }
</style>
