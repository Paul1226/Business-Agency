<header
  class="header__container w-10/12 max-w-[1200px] mx-auto py-4 flex justify-between flex-col flex-wrap md:flex-row md:items-center gap-2 sticky top-0 z-10 md:absolute md:left-0 md:right-0"
>
  <span class="text-center md:text-start">
    <a class="title__header font-semibold text-2xl" href="/">Archesky</a>
  </span>
  <nav class="nav text-monteCario-900">
    <ul class="grid grid-cols-4 items-between w-full text-sm xl:gap-4">
      <li><a class="link" href="/">Home</a></li>
      <li><a class="link" href="#">Service</a></li>
      <li><a class="link" href="#">Portofolio</a></li>
      <li><a class="link" href="#">Works</a></li>
    </ul>
  </nav>
</header>

<style>
  .header__container {
    animation: enhance-header ease-in-out both;
    animation-timeline: scroll(root block);
    animation-range: 0 150px;
    --bg:transparent;
  }
  nav a{
    @apply relative w-max mx-auto flex before:content-[''] before:w-1/2 before:h-[2px] before:bg-[var(--bg)] before:absolute before:-bottom-1 before:left-0 before:rounded-full;
  }
  nav a.active{
    --bg: rgb(126 218 210);
  }
  

  @keyframes enhance-header {
    80%{
      background-color: white;

    }
    100% {
      background-color: white;
      border-radius:0 0 15px 15px;
      box-shadow: 0px 10px 10px #00000010;
      scale: 1.10;
      --pl: 1rem;

    }
  }

  @media (min-width: 768px) {
    .header__container {
      animation: none;
    }

    span a{
      transition: padding-left 0.4s ease-in-out;
      padding-left: var(--pl);
    }

    nav a.active{
      --bg: rgb(27 70 70);
    }
  }
</style>

<script>
  const $links = document.querySelectorAll('.link');
  $links[0].classList.add('active');
</script>
